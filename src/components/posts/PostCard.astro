---
import type { CollectionEntry } from "astro:content";

type PostProps = CollectionEntry<"posts">["data"];
interface Props extends PostProps {
  slug: string;
}

const { title, date, category, published, description, slug } = Astro.props;
---

<article class="grid grid-cols-12 gap-x-6">
  <div
    class="col-span-2 self-center uppercase text-base font-medium text-right"
  >
    {
      date.toLocaleDateString("en-US", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    }
  </div>
  <h2 class="mb-0 col-span-10 text-2xl">
    <a class="no-underline" href={`/posts/${slug}`}>{title}</a>
    <!-- {published ? "" : "(Draft)"} -->
  </h2>

  <div class="col-span-2 text-right">
    {category}
  </div>
  <div class="col-span-10 text-slate-700">
    {description}
  </div>
</article>
