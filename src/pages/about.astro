---
import Company from "../components/about/Company.astro";
import Content from "../layouts/Content.astro";
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";

const experience = await getCollection("work-experience");
const companies = experience
  .map((company) => company.data)
  .sort((a, b) => b.order - a.order);
---

<Layout title="About Marat Abdulin">
  <Content as="article">
    <h1>About</h1>
    <h2>Work Experience</h2>
    <div class="flex flex-col gap-y-8 mb-16">
      {companies.map((company) => <Company {...company} />)}
    </div>
    <h2>Education</h2>
    <div>
      <h3 class="mb-0">
        Kazan National Research Technical University named after A.N.Tupolev
      </h3>
      <div class="text-base text-slate-700">
        <span class="font-medium"
          >Institute of radio-engineering and telecommunications</span
        > / 2007 - 2011
      </div>
      <div class="mb-4 last:mb-0 text-base text-slate-500">
        Bachelor of Engineering and Technology
      </div>
    </div>
  </Content>
</Layout>
