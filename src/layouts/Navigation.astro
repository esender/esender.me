---
import NavLink from "@layouts/NavLink.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts", ({ data }) =>
  import.meta.env.DEV ? true : data.published
);
---

<nav class:list={["flex gap-4", "sm:gap-6", "md:gap-10"]}>
  <NavLink href="/">Home</NavLink>
  {!!posts.length && <NavLink href="/posts/">Blog</NavLink>}
  <NavLink href="/about/">About</NavLink>
</nav>
